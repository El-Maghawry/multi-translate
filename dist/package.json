{
  "name": "transee",
  "productName": "Transee",
  "version": "1.0.3",
  "description": "Simple and usefull tool for quick translation",
  "main": "./main/main.js",
  "license": "MIT",
  "author": "Alessio Forte",
  "scripts": {
    "start": "electron ./main/main.js",
    "mac": "electron-builder --mac",
    "win": "electron-builder --win"
  },
  "repository": "https://github.com/alessioforte/transee.git",
  "homepage": "https://alessioforte.github.io/transee/",
  "build": {
    "productName": "Transee",
    "appId": "com.github.alessioforte.transee",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "alessioforte",
        "repo": "transee"
      }
    ],
    "mac": {
      "icon": "assets/transee.icns",
      "category": "utility.productivity.reference",
      "publish": "github"
    },
    "win": {
      "icon": "assets/transee.ico",
      "publish": "github"
    }
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.34.1"
  },
  "dependencies": {
    "electron-log": "^2.2.9",
    "electron-settings": "^3.1.2",
    "electron-updater": "2.0.0",
    "internet-available": "^1.0.0"
  }
}
