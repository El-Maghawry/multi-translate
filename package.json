{
  "name": "transee",
  "version": "1.0.3",
  "description": "Simple and usefull tool for quick translation",
  "author": "Alessio Forte",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build && npm run start",
    "build": "echo 'Building...' && webpack",
    "start": "electron ./app/main/main.js",
    "watch": "./node_modules/.bin/webpack-dev-server --port 8182",
    "delete": "rm dist/renderer/entry.bundle.js.map dist/renderer/preferences.bundle.js.map dist/renderer/welcome.bundle.js.map",
    "deleteall": "rm dist/renderer/entry.bundle.js.map dist/renderer/preferences.bundle.js.map dist/renderer/welcome.bundle.js.map dist/renderer/entry.bundle.js dist/renderer/preferences.bundle.js dist/renderer/welcome.bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alessioforte/transee.git"
  },
  "homepage": "https://alessioforte.github.io/transee/",
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "rxjs": "^5.5.2",
    "styled-components": "^2.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "configstore": "^3.1.1",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.7.9",
    "electron-settings": "^3.1.1",
    "eslint": "^4.4.1",
    "eslint-loader": "^1.9.0",
    "file-loader": "^1.1.5",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.9.0"
  }
}
