{
  "name": "transee",
  "version": "1.0.0",
  "description": "Quick reference to Google Translate desktop app",
  "scripts": {
    "dev": "npm run build && npm run start",
    "build": "echo 'Building...' && webpack",
    "start": "electron ./dist/build/main.bundle.js",
    "watch": "./node_modules/.bin/webpack-dev-server --port 8182",
    "build:darwin": "electron-packager ./dist --platform=darwin --arch=x64 --out=darwin --icon=./dist/transee.icns --overwrite",
    "asar": "asar pack ./darwin/Transee-darwin-x64/Transee.app/Contents/Resources/app ./darwin/Transee-darwin-x64/Transee.app/Contents/Resources/app.asar",
    "remove": "rm -r ./darwin/Transee-darwin-x64/Transee.app/Contents/Resources/app",
    "darwin": "rm ./dist/build/main.bundle.js && npm run build:darwin && npm run asar && npm run remove",
    "dmg": "electron-installer-dmg ./darwin/Transee-darwin-x64/Transee.app transee-1.0"
  },
  "author": "Alessio Forte",
  "license": "MIT",
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "configstore": "^3.1.1",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.7.8",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^9.1.0",
    "electron-settings": "^3.1.1",
    "eslint": "^4.4.1",
    "eslint-loader": "^1.9.0",
    "file-loader": "^0.11.2",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.9.0"
  }
}
